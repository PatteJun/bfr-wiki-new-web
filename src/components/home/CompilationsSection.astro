---
import { compilations } from '../../data/compilations';
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Popular Compilations</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {compilations.map((compilation) => (
        <a href={`/compilations/${compilation.id}`} class="group">
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <img src={compilation.image} alt={compilation.title} class="w-full h-48 object-cover group-hover:opacity-90 transition-opacity" />
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 group-hover:text-blue-900 transition-colors">{compilation.title}</h3>
              <p class="text-gray-600">{compilation.description}</p>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</section>