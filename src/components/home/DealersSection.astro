---
import { dealers } from '../../data/dealers';
import PersonCard from '../shared/PersonCard.astro';

const activeDealers = dealers.filter(dealer => dealer.active);
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Our Dealers</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {activeDealers.map((dealer) => (
        <PersonCard 
          name={dealer.name}
          image={dealer.image}
          role={dealer.specialty}
          href={`/dealers/${dealer.id}`}
        />
      ))}
    </div>
    <div class="text-center mt-12">
      <a href="/dealers" class="inline-block bg-blue-900 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-800 transition-colors">
        View All Dealers
      </a>
    </div>
  </div>
</section>