---
import type { Object } from '../../data/featured-objects';

interface Props {
  object: Object;
}

const { object } = Astro.props;

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('de-DE', {
    style: 'currency',
    currency: 'EUR'
  }).format(price);
};
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <img src={object.image} alt={object.name} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{object.name}</h3>
    <p class="text-gray-600 mb-4">{object.description}</p>
    <div class="flex justify-between items-center text-sm">
      <div>
        <span class="text-gray-500">Estimated:</span>
        <span class="font-semibold">{formatPrice(object.estimatedPrice)}</span>
      </div>
      <div>
        <span class="text-gray-500">Sold for:</span>
        <span class="font-semibold text-green-600">{formatPrice(object.sellingPrice)}</span>
      </div>
    </div>
  </div>
</article>