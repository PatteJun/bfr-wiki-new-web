---
interface Props {
  name: string;
  image: string;
  role: string;
  href: string;
}

const { name, image, role, href } = Astro.props;
---

<a href={href} class="group">
  <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
    <img src={image} alt={name} class="w-full h-48 object-cover group-hover:opacity-90 transition-opacity" />
    <div class="p-4 text-center">
      <h3 class="font-bold group-hover:text-blue-900 transition-colors">{name}</h3>
      <p class="text-sm text-gray-600">{role}</p>
    </div>
  </article>
</a>