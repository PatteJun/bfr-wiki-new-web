---
interface Props {
  name: string;
  profilePicture: string;
  expertise: string[];
  yearsActive: string;
}

const { name, profilePicture, expertise, yearsActive } = Astro.props;
---

<section class="bg-gradient-to-b from-blue-900 to-blue-800 text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="order-2 md:order-1">
        <h1 class="text-4xl font-bold mb-4">{name}</h1>
        <div class="flex flex-wrap gap-3 mb-6">
          {expertise.map((skill) => (
            <span class="bg-blue-700 px-4 py-2 rounded-full text-sm font-medium shadow-md hover:bg-blue-600 transition-colors">
              {skill}
            </span>
          ))}
        </div>
        <div class="flex items-center gap-6 text-gray-200">
          <div>
            <span class="block text-sm uppercase tracking-wider">Experte seit</span>
            <span class="font-semibold text-lg">{yearsActive}</span>
          </div>
        </div>
      </div>
      <div class="order-1 md:order-2 flex justify-center">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full blur-lg opacity-50"></div>
          <img 
            src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=800&h=800&fit=crop" 
            alt={name} 
            class="relative w-64 h-64 rounded-full object-cover border-4 border-white shadow-2xl"
          />
        </div>
      </div>
    </div>
  </div>
</section>