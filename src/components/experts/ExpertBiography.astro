---
interface Props {
  biography: string;
  trivia: string[];
}

const { biography, trivia } = Astro.props;
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold mb-6">Biography</h2>
      <p class="text-gray-700 mb-8 leading-relaxed">
        {biography}
      </p>

      <h3 class="text-xl font-bold mb-4">Fun Facts</h3>
      <ul class="space-y-3">
        {trivia.map((fact) => (
          <li class="flex items-start">
            <span class="text-blue-900 mr-2">â€¢</span>
            <span class="text-gray-700">{fact}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>